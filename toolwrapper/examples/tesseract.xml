<?xml version="1.0" encoding="UTF-8"?>
<toolspec model="0.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="src/main/resources/toolspec.xsd">
    <id>tesseract</id>
    <name>Tesseract OCR</name>
    <homepage>http://code.google.com/p/tesseract-ocr/</homepage>
    <version>3.0.1</version>
    <installation>
        <os type="linux">
	    Available under most distributions via package management.           
        </os>
        <os type="windows">
            Binaries for Windows are available from the project homepage.
        </os>
    </installation>
    <services>
        <service sid="1" name="Tesseract" type="migrate" servicepackage="eu.impact_project.iif.service" contextpathprefix="/wimpactservices">
            <description>Service for copying files</description>
            <operations>
                <operation oid="1" name="ocr">
                    <description>OCR a TIFF image file</description>
                    <command>tesseract-3.01/tesseract.exe ${input} ${output} -l ${langmod} </command>
                    <inputs>
                        <input name="input">
                            <Datatype>xsd:anyURI</Datatype>
                            <Required>true</Required>
                            <CliMapping>input</CliMapping>
                            <Documentation>URL reference to input file</Documentation>
                            <Default>http://kbdemo.dnsalias.org/testfiles/00046135.bw.tif</Default>
                        </input>
                        <input name="langmod">
                            <Datatype>xsd:string</Datatype>
			    <Restriction>
				<Value>ara</Value>
				<Value>bul</Value>
				<Value>cat</Value>
				<Value>ces</Value>
				<Value>chi_sim</Value>
				<Value>chi_tra</Value>
				<Value>dan</Value>
				<Value>dan-frak</Value>
				<Value>deu</Value>
				<Value>deu-frak</Value>
				<Value>ell</Value>
				<Value>eng</Value>
				<Value>fin</Value>
				<Value>fra</Value>
				<Value>heb</Value>
				<Value>hin</Value>
				<Value>hun</Value>
				<Value>ind</Value>
				<Value>ita</Value>
				<Value>jpn</Value>
				<Value>kor</Value>
				<Value>lav</Value>
				<Value>lit</Value>
				<Value>nld</Value>
				<Value>nor</Value>
				<Value>osd</Value>
				<Value>pol</Value>
				<Value>por</Value>
				<Value>ron</Value>
				<Value>rus</Value>
				<Value>slk</Value>
				<Value>slk-frak</Value>
				<Value>slv</Value>
				<Value>spa</Value>
				<Value>srp</Value>
				<Value>swe</Value>
				<Value>swe-frak</Value>
				<Value>tha</Value>
				<Value>tgl</Value>
				<Value>tur</Value>
				<Value>ukr</Value>
				<Value>vie</Value>
			    </Restriction>
                            <Required>true</Required>
                            <CliMapping>langmod</CliMapping>
                            <Documentation>Language module to be used by tesseract</Documentation>
                            <Default>deu-frak</Default>
                        </input>
                    </inputs>
                    <outputs>
                        <output name="output">
                            <Datatype>xsd:anyURI</Datatype>
                            <Required>false</Required>
                            <CliMapping>output</CliMapping>
                            <Documentation>URL reference to output file</Documentation>
                            <Extension>txt</Extension>
                            <AutoExtension>true</AutoExtension>
                        </output>
                    </outputs>
                </operation>
            </operations>
            <deployto>
                <deployref default="true" ref="local"/>
            </deployto>
        </service>
    </services>
    <deployments>
        <deployment id="local">
            <identifier>http://localhost:8080/impact/instances/tomcat1</identifier>
            <host>localhost</host>
            <ports>
                <port type="http">8080</port>
                <port type="https">8043</port>
            </ports>
            <manager>
                <user>tomcat</user>
                <password>tomcat</password>
		<path>manager</path>
            </manager>
            <toolsbasedir>C:\\impact\\</toolsbasedir>
            <dataexchange>
                <accessdir>../webapps/ROOT/impact/tmp/</accessdir>
                <accessurl>http://localhost:8080/impact/tmp/</accessurl>
            </dataexchange>
        </deployment>
    </deployments>
</toolspec>
